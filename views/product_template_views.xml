<odoo>
    <!-- Heredar vista de formulario de productos para agregar campo URL Proveedor -->
    <record id="view_product_template_form_inherit_syscom" model="ir.ui.view">
        <field name="name">product.template.form.inherit.syscom</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_only_form_view"/>
        <field name="arch" type="xml">
            <!-- Agregar el campo después de 'categ_id' en la sección de Información General -->
            <xpath expr="//field[@name='barcode']" position="after">
                <field name="syscom_url" widget="url" placeholder="https://ejemplo.com/producto"/>
            </xpath>
        </field>
    </record>

    <!-- Opcional: Agregar campo a la vista de lista -->
    <record id="view_product_template_list_inherit_syscom" model="ir.ui.view">
        <field name="name">product.template.list.inherit.syscom</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_tree_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='barcode']" position="after">
                <field name="syscom_url" optional="hide"/>
            </xpath>
        </field>
    </record>


    <record id="action_import_from_syscom" model="ir.actions.server">
        <field name="name">Importar desde Syscom</field>
        <field name="model_id" ref="product.model_product_template"/>
        <field name="binding_model_id" ref="product.model_product_template"/>
        <field name="binding_view_types">list</field>
        <field name="state">code</field>
        <field name="code">
if records:
    action = records.action_import_from_syscom()
else:
    action = model.action_import_from_syscom()
        </field>
    </record>
</odoo>